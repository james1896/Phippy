<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tiffany.phippy">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:name=".PHIApplication">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".life.MedicineListActivity">
            <intent-filter>
                <action android:name="android.intent.action.Medicine" />
            </intent-filter>
        </activity>
        <activity android:name=".food.FoodDetailActivity" />
        <activity android:name=".food.FoodRecActivity" />
        <activity android:name=".life.MedicineActivity" />
        <activity android:name=".life.VisaActivity" />
        <activity android:name=".tour.TourRecActivity" />
        <activity android:name=".base.db.DBDebugActivity" />
        <activity
            android:name=".me.SettingActivity"
            android:label="@string/title_activity_setting"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"></activity>
    </application>

</manifest>