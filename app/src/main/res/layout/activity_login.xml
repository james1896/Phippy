<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/login_backButton"
        android:layout_alignParentTop="true"
    android:layout_marginTop="30dp"
        android:layout_width="38dp"
        android:layout_height="30dp"
        android:background="@mipmap/toolbar_back"/>

    <LinearLayout
        android:id="@+id/centerView"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:hint="手机号"
            android:id="@+id/login_userName"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <EditText
            android:hint="密码"
            android:id="@+id/login_pwd"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/login_btn"
            style="?android:attr/borderlessButtonStyle"
        android:text="登录"
            android:layout_marginTop="@dimen/login_v_pace"
            android:textSize="18sp"
            android:textColor="@color/background_whit"
            android:background="@color/color_login_tbn"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="忘记密码?"
                android:background="#00FFFFFF"
                android:id="@+id/login_forget_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

            </LinearLayout>

            <Button
                android:text="注册账号"
                android:background="#00FFFFFF"
                android:id="@+id/login_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_below="@id/centerView"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:text="微信登录"
        android:layout_width="40dp"
        android:layout_height="40dp" />
</RelativeLayout>