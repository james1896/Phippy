<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/register_backButton"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_width="38dp"
        android:layout_height="30dp"
        android:background="@mipmap/toolbar_back"/>

    <LinearLayout
        android:id="@+id/login_centerView"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:hint="手机号"
            android:id="@+id/login_userName"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:hint="验证码"
                android:id="@+id/login_pwd"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/register_verf_btn"
                android:text="发送验证码"
                android:background="#00FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <Button
            android:layout_marginTop="@dimen/login_v_pace"
            android:id="@+id/login_btn"
            android:text="完成注册"
            android:textColor="@color/background_whit"
            android:textSize="18sp"
            android:background="@color/color_login_tbn"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



        </LinearLayout>

    </LinearLayout>

</RelativeLayout>